<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/view1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#71E60A"
            android:gravity="fill_vertical"
            android:text="1"/>

        <TextView
            android:id="@+id/view2"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/view1"
            android:background="#36911D"
            android:gravity="center_horizontal"
            android:text="2" />

        <TextView
            android:id="@+id/view3"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/view2"
            android:background="#FFC107"
            android:gravity="bottom|center"
            android:text="3" />

        <TextView
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/view3"
            android:background="#E68C07"
            android:gravity="end"
            android:text="4" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:id="@+id/view5"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#673AB7"
            android:gravity="center"
            android:text="5" />

        <TextView
            android:id="@+id/view6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/view5"
            android:background="@android:color/holo_blue_dark"
            android:gravity="center"
            android:text="6" />

        <TextView
            android:id="@+id/view7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/view5"
            android:layout_alignLeft="@id/view6"
            android:layout_below="@id/view6"
            android:background="@android:color/holo_red_dark"
            android:gravity="center"
            android:text="7" />




        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/view8"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="#00BCD4"
            android:gravity="center"
            android:text="8"/>

        <TextView
            android:id="@+id/view9"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/view8"
            android:background="#1A7DCC"
            android:gravity="center"
            android:text="9" />

        <TextView
            android:id="@+id/view10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/view9"
            android:background="#03A9F4"
            android:gravity="center"
            android:text="10" />
        </RelativeLayout>

</LinearLayout>